  <script>

    if (sessionStorage.foutFontsStage1Loaded && sessionStorage.foutFontsStage2Loaded ||
       ('serviceWorker' in navigator && navigator.serviceWorker.controller !== null && navigator.serviceWorker.controller.state === 'activated')
    ) {
      
    } else if ('fonts' in document) {
      function fetchFonts(fonts) {
        return Promise.all(fonts.map(function(font) {
          return document.fonts.load(font);
        }));
      }

      fetchFonts([
        '1em ElenaInitial',
        '1em MijaInitial'
      ]).then(function() {
        var docEl = document.documentElement;
        docEl.classList.add('wf-loaded-stage1');
        sessionStorage.foutFontsStage1Loaded = true;

        fetchFonts([
          '1em Elena',
          '700 1em Elena',
          'italic 1em Elena',
          'italic 700 1em Elena',
          '1em Mija',
          '700 1em Mija'
        ]).then(function() {
          docEl.classList.add('wf-loaded-stage2');
          sessionStorage.foutFontsStage2Loaded = true;
        });
      });
    }
  </script>

  

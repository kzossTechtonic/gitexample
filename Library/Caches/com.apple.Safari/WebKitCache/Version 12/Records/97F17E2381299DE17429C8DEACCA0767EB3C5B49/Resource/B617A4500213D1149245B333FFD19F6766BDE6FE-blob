<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?lang=css&skin=desert"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.7.1/clipboard.min.js"></script>
<script>
 (function(){

   var clipboard = new Clipboard('.copy-button'),
       overlay = document.querySelector('.bottom-overlay'),
       modal = document.querySelector('.opt-in-modal'),
       modalClose = document.querySelectorAll('.modal-close-button'),
       localStorage = window.localStorage,
       popup = function() {
         if (localStorage['popup-has-loaded']) {
           // do nothing
         } else {
           document.body.classList.add('no-scroll');
           modal.classList.remove('hidden');
           nrol.track('Loaded a Modal', {
             'modal name' : 'Cheat Sheet CTA',
             'url' : window.location.pathname
           });
           localStorage['popup-has-loaded'] = true;
         }
       },
       bottomOverlay = function(){
         overlay.classList.remove('hidden');
         nrol.track('Loaded a Modal', {
           'modal name' : 'Cheat Sheet Bottom CTA',
           'url' : window.location.pathname
         });
       };


   clipboard.on('success', function(e) {
     e.trigger.innerHTML = '<i class="far fa-copy" aria-hidden="true"></i> copied';

     nrol.track('Copied Code', {
       'url' : window.location.pathname
     });
   });

   setTimeout(function(){
     popup();
   }, 1000 * 90); // 90 seconds

   setTimeout(function(){
     bottomOverlay();
   }, 1000 * 10); // 10 seconds


   modalClose.forEach(function(closeButton) {
     closeButton.addEventListener('click', function(event) {
       if (closeButton.parentNode === overlay) {
         overlay.classList.add('hidden');
       } else {
         document.body.classList.remove('no-scroll');
         modal.classList.add('hidden');
       }
       event.preventDefault();
     });
   });

   document.addEventListener('click', function(event) {
     var target = event.target,
         options = null,
         container = null;

     if (target
         && target.parentNode
         && target.parentNode.classList.contains('options')) {
       options = target.parentNode;
       container = options.parentNode;
     }

     if (options
         && !target.classList.contains('copy-button')) {
       event.preventDefault();

       if (!target.classList.contains('selected')) {
         options.querySelectorAll('a').forEach(function(option) {
           option.classList.remove('selected');
         });
         target.classList.add('selected');
         var active = container.querySelector('.active'),
             hidden = container.querySelector('.hidden');
         hidden.classList.remove('hidden');
         hidden.classList.add('active');
         active.classList.remove('active');
         active.classList.add('hidden');
       }
     }
   });
 })();
</script>

